.message-list__box
  .message-list__box__user
    .message-list__box__user__name
      = message.user.name
    .message-list__box__user__time
      = message.created_at.strftime("%Y年%m月%d日　%H時%M分")
  .message-list__box__message
    - if message.content.present?
      %p.message-list__box__message__content
        = message.content
    = image_tag message.image.url, class: "message-list__box__message__image" if message.image.present?
    