.side-bar
  .side-header
    .side-header__items
      .side-header__items__name
        = current_user.name
      %ul.side-header__items__menu
        %li.side-header__items__edit-btn
          = link_to "/groups/new" do
            = icon('fas','edit')
        %li.side-header__items__config-btn
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group-list__box
        = link_to group_messages_path(group) do
          .group-list__box__group-name
            = group.name
          .group-list__box__message
            = group.show_last_message